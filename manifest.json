{
  "manifest_version": 2,

  "name": "Slim Reader",
  "description": "This extension allows the user to make wide pages slimmer, making lines of text shorter and easier to read.",
  "version": "0.1.0",

  "icons": {
    "16": "icons/dev_16.png",
    "48": "icons/dev_48.png",
    "128": "icons/dev_128.png"
  },

  "background": {
    "scripts": ["main.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/dev_16.png",
      "24": "icons/dev_24.png",
      "32": "icons/dev_32.png"
    },
    "default_title": "Enable Slim Reader"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
